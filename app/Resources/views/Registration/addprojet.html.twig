        <div id="form-add-projets-1" class="form-add-projets-1 form-add-projets">
            <h2>Demandez l'oeuvre qui vous ressemble</h2>
            <h3>Décrivez votre oeuvre</h3>
            <div id="flex-form-1" class="flex-form">
                <div class="first-content">
                    <form name="projets" method="post" enctype="multipart/form-data">
                        <div class="form-group-addprojets">
                            <label for="projets_name" class="required">Name</label>
                            <input type="text" id="projets_name" name="projets[name]" required="required"
                                   class="form-control"/>
                        </div>
                        <div class="form-group-addprojets">
                            <label for="projets_type" class="required">Type</label>
                            <select id="projets_type" name="projets[type]" class="form-control">
                                <option value="Céramique">Céramique</option>
                                <option value="Plastique">Plastique</option>
                                <option value="Peinture">Peinture</option>
                            </select>
                        </div>
                        <div class="form-group-addprojets">
                            <label for="projets_theme" class="required">Theme</label>
                            <select id="projets_theme" name="projets[theme]" class="form-control">
                                <option value="Art">Art</option>
                                <option value="Michou">Michou</option>
                                <option value="Jambon">Jambon</option>
                            </select>
                        </div>
                        <div class="form-group-addprojets">
                            <label for="projets_orientation" class="required">Orientation</label>
                            <select id="projets_orientation" name="projets[orientation]" class="form-control">
                                <option value="Paysage">Paysage</option>
                                <option value="Portrait">Portrait</option>
                            </select>
                        </div>
                </div>

                <div class="second-content">
                    <div class="form-group-addprojets-2">
                        <label for="projets_description" class="required">Description</label>
                        <input type="text" id="projets_description" name="projets[description]" required="required"
                               class="form-control"/>
                        <button class="btn-suivant" onclick="swapForm()">Suivant</button>
                    </div>
                </div>

            </div>
        </div>

        <div id="form-add-projets-2" class="form-add-projets-2 form-add-projets none">
            <h2>Demandez l'oeuvre qui vous ressemble</h2>
            <h3>Décrivez votre oeuvre</h3>
            <div id="flex-form-1" class="flex-form">
                <div class="first-content-2">
                    <div>
                        <label for="projets_budget" class="required">Budget</label>
                        <input type="number" id="projets_budget" name="projets[budget]" required="required"
                               class="form-control"/>
                    </div>
                    <div>
                        <label for="projets_largeur" class="required">Largeur</label>
                        <input type="number" id="projets_largeur" name="projets[largeur]" required="required"
                               class="form-control"/></div>
                    <div>
                        <label for="projets_image" class="required">Image(JPG)</label>
                        <input type="file" id="projets_image" name="projets[image]" required="required"/></div>
                </div>
                <div class="second-content-2">
                    <div>
                        <label for="projets_hauteur" class="required">Hauteur</label>
                        <input type="number" id="projets_hauteur" name="projets[hauteur]" required="required"
                               class="form-control"/>
                    </div>
                    <div>
