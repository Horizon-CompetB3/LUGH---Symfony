{% extends "base.html.twig" %}
{% block layout_content %}

    <section class="section" id="section-co">
        <div class="connexion-section-content">
            <form id="form-co" action="{{ path('login') }}" method="post">
                <h2>Déjà inscrit ?
                    </br>Connectez vous</h2>
                <div class="form-group-co">
                    <input placeholder="E-mail" type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                </div>
                <div class="form-group-co">
                    <input placeholder="Mot de passe" type="password" id="password" name="_password" class="form-control"/>
                </div>


                <div class="form-group-co">

                    <button type="submit" class="">Connexion</button>
                </div>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <a class="link-co" href="{{ path('forgotpassword') }}">Mot de passe oublié ?</a>
                <div class="underline"></div>
                <a class="inscription-co" href="{{ path('add-user') }}">Vous n'avez pas encore de compte ? Inscrivez-vous</a>
                <div class="underline"></div>

            </form>

        </div>
        <div id="connexion-section-2" class="background-right"></div>


    </section>
{% endblock %}